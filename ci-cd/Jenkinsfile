pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'secure-app'
        REGISTRY_URL = 'harbor.myorg.com'
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Pranav8722/container-security.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                bat 'docker build -t $REGISTRY_URL/$DOCKER_IMAGE:latest .'
            }
        }
        stage('Scan Docker Image') {
            steps {
                bat 'sh scanners/trivy-scan.sh $REGISTRY_URL/$DOCKER_IMAGE:latest'
            }
        }
        stage('Push Docker Image') {
            steps {
                bat 'docker push $REGISTRY_URL/$DOCKER_IMAGE:latest'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                bat 'kubectl apply -f k8s/deployment.yaml'
            }
        }
    }
    post {
        success {
            echo 'Pipeline executed successfully'
        }
        failure {
            echo 'Pipeline failed. Check logs.'
        }
    }
}
